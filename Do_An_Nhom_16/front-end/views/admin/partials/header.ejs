<!-- =========================================
     ADMIN HEADER - DARK FROSTED GLASS NAV
     ========================================= -->
<link rel="stylesheet" href="/css/admin.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* CRITICAL: Remove ALL spacing from body and html */
    html, body {
        margin: 0 !important;
        padding: 0 !important;
        border: 0 !important;
    }
    
    /* Override admin header styles for better visibility */
    .admin-header {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        width: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
        z-index: 9999 !important;
        
        background: rgba(20, 30, 15, 0.85) !important;
        backdrop-filter: blur(20px) saturate(150%) !important;
        -webkit-backdrop-filter: blur(20px) saturate(150%) !important;
        border-bottom: 1px solid rgba(163, 197, 151, 0.2) !important;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3) !important;
    }
    
    /* Add padding to body to compensate for fixed header */
    body {
        padding-top: 70px !important;
    }
    
    .admin-header .container {
        display: flex !important;
        justify-content: space-between !important;
        align-items: center !important;
        padding: 12px 20px !important;
        gap: 20px !important;
        flex-wrap: nowrap !important;
        max-width: 100% !important;
        margin: 0 auto !important;
    }
    
    .admin-brand {
        color: rgba(255, 255, 255, 0.95) !important;
        white-space: nowrap !important;
        flex-shrink: 0 !important;
        font-size: 1.3rem !important;
        font-weight: 800 !important;
        letter-spacing: 1px !important;
    }
    
    .admin-brand i {
        color: rgba(163, 197, 151, 0.95) !important;
    }
    
    .admin-nav {
        display: flex !important;
        align-items: center !important;
        gap: 5px !important;
        flex: 1 !important;
        justify-content: center !important;
        flex-wrap: nowrap !important;
        overflow-x: auto !important;
        scrollbar-width: none !important;
    }
    
    .admin-nav::-webkit-scrollbar {
        display: none !important;
    }
    
    .admin-nav a {
        color: rgba(255, 255, 255, 0.85) !important;
        white-space: nowrap !important;
        flex-shrink: 0 !important;
        padding: 10px 18px !important;
        border-radius: 50px !important;
        font-size: 0.9rem !important;
        font-weight: 600 !important;
        text-decoration: none !important;
        transition: all 0.3s ease !important;
    }
    
    .admin-nav a:hover {
        background: rgba(255, 255, 255, 0.12) !important;
        color: rgba(255, 255, 255, 0.95) !important;
    }
    
    .admin-nav a.active {
        background: rgba(96, 108, 56, 0.8) !important;
        color: white !important;
        box-shadow: 0 4px 15px rgba(96, 108, 56, 0.4) !important;
    }
    
    .user-info {
        display: flex !important;
        align-items: center !important;
        gap: 12px !important;
        white-space: nowrap !important;
        flex-shrink: 0 !important;
    }
    
    .user-info span {
        color: rgba(255, 255, 255, 0.9) !important;
        font-size: 0.9rem !important;
    }
    
    .user-info strong {
        color: rgba(163, 197, 151, 0.95) !important;
        font-weight: 700 !important;
    }
    
    .btn-logout {
        padding: 8px 16px !important;
        border-radius: 50px !important;
        background: rgba(220, 53, 69, 0.2) !important;
        backdrop-filter: blur(8px) !important;
        border: 1px solid rgba(220, 53, 69, 0.3) !important;
        color: #ff6b6b !important;
        font-weight: 600 !important;
        font-size: 0.85rem !important;
        text-decoration: none !important;
        transition: all 0.3s ease !important;
    }
    
    .btn-logout:hover {
        background: #dc3545 !important;
        color: white !important;
        border-color: #dc3545 !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4) !important;
    }
    
    /* Badge notification */
    .badge-notif {
        position: absolute !important;
        top: -5px !important;
        right: -8px !important;
        background: linear-gradient(135deg, #ff3b30 0%, #ff6b6b 100%) !important;
        color: white !important;
        font-size: 0.7rem !important;
        font-weight: bold !important;
        min-width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        border-radius: 50% !important;
        border: 2px solid rgba(20, 30, 15, 0.85) !important;
        box-shadow: 0 2px 8px rgba(255, 59, 48, 0.5) !important;
    }
    
    /* Responsive adjustments */
    @media (max-width: 1200px) {
        .admin-nav a {
            padding: 8px 14px !important;
            font-size: 0.85rem !important;
        }
    }
    
    @media (max-width: 992px) {
        .admin-header .container {
            flex-wrap: wrap !important;
        }
        
        .admin-nav {
            order: 3 !important;
            width: 100% !important;
            justify-content: flex-start !important;
            gap: 6px !important;
            padding-top: 10px !important;
        }
        
        body {
            padding-top: 110px !important;
        }
    }
</style>

<header class="admin-header">
    <div class="container">
        <!-- Brand Logo -->
        <div class="admin-brand">
            <i class="fas fa-coffee"></i> 
            CATFE MANAGER
        </div>
        
        <!-- Navigation Menu -->
        <nav class="admin-nav">
            <a href="/admin/dashboard" 
               class="<%= (typeof page !== 'undefined' && page === 'dashboard') ? 'active' : '' %>">
                <i class="fas fa-tachometer-alt"></i> 
                Tổng quan
            </a>
            
            <a href="/admin/products" 
               class="<%= (typeof page !== 'undefined' && page === 'products') ? 'active' : '' %>">
                <i class="fas fa-mug-hot"></i> 
                Món ăn
            </a>
            
            <a href="/admin/posts" 
               class="<%= (typeof page !== 'undefined' && page === 'posts') ? 'active' : '' %>">
                <i class="fas fa-newspaper"></i> 
                Bài viết
            </a>
            
            <a href="/admin/branches" 
               class="<%= (typeof page !== 'undefined' && page === 'branches') ? 'active' : '' %>">
                <i class="fas fa-store"></i> 
                Chi nhánh
            </a>
            
            <!-- Comments with notification badge -->
            <a href="/admin/comments" 
               class="<%= (typeof page !== 'undefined' && page === 'comments') ? 'active' : '' %>"
               style="position: relative;">
                <i class="fas fa-comments"></i> 
                Bình luận
                <% if (typeof pendingCount !== 'undefined' && pendingCount > 0) { %>
                    <span class="badge-notif"><%= pendingCount %></span>
                <% } %>
            </a>

            <!-- Contacts with notification badge -->
            <a href="/admin/contacts" 
               class="<%= (typeof page !== 'undefined' && page === 'contacts') ? 'active' : '' %>"
               style="position: relative;">
                <i class="fas fa-envelope"></i> 
                Liên hệ
                <% if (typeof contactCount !== 'undefined' && contactCount > 0) { %>
                    <span class="badge-notif"><%= contactCount %></span>
                <% } %>
            </a>
        </nav>

        <!-- User Info & Logout -->
        <div class="user-info">
            <span>
                Xin chào, 
                <strong><%= user ? user.full_name : 'Admin' %></strong>
            </span>
            <a href="/admin/logout" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> 
                Thoát
            </a>
        </div>
    </div>
</header>

<!-- Optional: Admin Notification Toast -->
<div id="admin-toast" style="position: fixed; top: 100px; right: 20px; z-index: 9999; display: none;
    padding: 16px 24px; border-radius: 12px; background: rgba(42, 157, 143, 0.9); 
    backdrop-filter: blur(10px); color: white; font-weight: 600; 
    box-shadow: 0 8px 30px rgba(0,0,0,0.3); animation: slideInRight 0.4s ease;">
    <i class="fas fa-check-circle"></i> 
    <span id="toast-message">Thao tác thành công!</span>
</div>

<style>
@keyframes slideInRight {
    from { transform: translateX(400px); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
}

@keyframes slideOutRight {
    from { transform: translateX(0); opacity: 1; }
    to { transform: translateX(400px); opacity: 0; }
}
</style>

<script>
// Toast notification function
window.showToast = function(message, type = 'success') {
    const toast = document.getElementById('admin-toast');
    const toastMessage = document.getElementById('toast-message');
    
    // Set message
    toastMessage.textContent = message;
    
    // Set color based on type
    const colors = {
        success: 'rgba(42, 157, 143, 0.9)',
        error: 'rgba(230, 57, 70, 0.9)',
        warning: 'rgba(230, 126, 34, 0.9)',
        info: 'rgba(100, 181, 246, 0.9)'
    };
    toast.style.background = colors[type] || colors.success;
    
    // Show toast
    toast.style.display = 'block';
    
    // Auto hide after 3 seconds
    setTimeout(() => {
        toast.style.animation = 'slideOutRight 0.4s ease';
        setTimeout(() => {
            toast.style.display = 'none';
            toast.style.animation = 'slideInRight 0.4s ease';
        }, 400);
    }, 3000);
}

// Example usage: Check for success message in URL
if (window.location.search.includes('success=true')) {
    showToast('Thao tác thành công!', 'success');
}
</script>