<!-- =========================================
     CLIENT HEADER - FROSTED GLASS NAVIGATION
     ========================================= -->
<style>
    /* Enhanced header visibility */
    header {
        background: rgba(30, 40, 20, 0.80) !important;
        backdrop-filter: blur(20px) saturate(150%) !important;
        -webkit-backdrop-filter: blur(20px) saturate(150%) !important;
        border-bottom: 1px solid rgba(163, 197, 151, 0.25) !important;
        position: sticky !important;
        top: 0 !important;
        z-index: 1000 !important;
        margin: 0 !important;
        padding: 0 !important;
    }
    
    header.scrolled {
        background: rgba(20, 30, 15, 0.90) !important;
        backdrop-filter: blur(25px) saturate(180%) !important;
    }
    
    .header-inner {
        display: flex !important;
        justify-content: space-between !important;
        align-items: center !important;
        height: 80px !important;
    }
    
    nav ul {
        display: flex !important;
        gap: 15px !important;
    }
    
    nav ul li {
        position: relative !important;
    }
    
    nav ul li a {
        color: rgba(255, 255, 255, 0.9) !important;
    }
    
    nav ul li a:hover,
    nav ul li a.active {
        color: rgba(163, 197, 151, 0.95) !important;
    }
    
    /* CRITICAL: Hide dropdown by default */
    .dropdown-menu {
        display: none !important;
        opacity: 0 !important;
        visibility: hidden !important;
        position: absolute !important;
        top: calc(100% + 10px) !important;
        left: 0 !important;
        background: rgba(30, 40, 20, 0.90) !important;
        backdrop-filter: blur(20px) !important;
        -webkit-backdrop-filter: blur(20px) !important;
        border: 1px solid rgba(163, 197, 151, 0.25) !important;
        border-radius: 12px !important;
        padding: 8px !important;
        min-width: 200px !important;
        z-index: 1100 !important;
        transform: translateY(-10px) !important;
        transition: all 0.3s ease !important;
    }
    
    /* Show dropdown ONLY on hover */
    .dropdown:hover .dropdown-menu {
        display: block !important;
        opacity: 1 !important;
        visibility: visible !important;
        transform: translateY(0) !important;
    }
    
    .dropdown-menu li {
        display: block !important;
        margin: 0 !important;
    }
    
    .dropdown-menu li a {
        color: rgba(255, 255, 255, 0.85) !important;
        display: block !important;
        padding: 12px 16px !important;
        border-radius: 8px !important;
    }
    
    .dropdown-menu li a:hover {
        background: rgba(163, 197, 151, 0.2) !important;
        color: rgba(163, 197, 151, 0.95) !important;
    }
</style>

<header>
    <div class="container header-inner">
        <!-- Logo -->
        <a href="/" class="logo">
            <img src="/img/logo.png" alt="Catfe Logo" onerror="this.src='https://placehold.co/120x60/FEFAF0/283618?text=CATFE&font=montserrat'">
        </a>

        <!-- Main Navigation -->
        <nav>
            <ul>
                <li>
                    <a href="/" class="<%= typeof page !== 'undefined' && page === 'home' ? 'active' : '' %>">
                        <i class="fas fa-home"></i> Trang chủ
                    </a>
                </li>
                
                <li class="dropdown">
                    <a href="/thuc-don" class="<%= typeof page !== 'undefined' && page === 'menu' ? 'active' : '' %>">
                        <i class="fas fa-utensils"></i> Thực đơn <i class="fas fa-chevron-down" style="font-size: 0.7rem;"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/thuc-don?cat=1"><i class="fas fa-mug-hot"></i> Cà Phê</a></li>
                        <li><a href="/thuc-don?cat=3"><i class="fas fa-snowflake"></i> Freeze</a></li>
                        <li><a href="/thuc-don?cat=2"><i class="fas fa-leaf"></i> Trà</a></li>
                        <li><a href="/thuc-don?cat=4"><i class="fas fa-cookie-bite"></i> Bánh Ngọt</a></li>
                    </ul>
                </li>
                
                <li>
                    <a href="/tin-tuc" class="<%= typeof page !== 'undefined' && page === 'news' ? 'active' : '' %>">
                        <i class="fas fa-newspaper"></i> Tin tức
                    </a>
                </li>
                
                <li>
                    <a href="/chi-nhanh" class="<%= typeof page !== 'undefined' && page === 'branches' ? 'active' : '' %>">
                        <i class="fas fa-store"></i> Cửa hàng
                    </a>
                </li>
                
                <li>
                    <a href="/lien-he" class="<%= typeof page !== 'undefined' && page === 'contact' ? 'active' : '' %>">
                        <i class="fas fa-envelope"></i> Liên hệ
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Right Side Icons (Placeholder for future features) -->
        <div class="header-icons" style="width: 60px;"></div>
    </div>
</header>

<!-- JavaScript for Header Scroll Effect -->
<script>
    // Add 'scrolled' class when user scrolls down
    window.addEventListener('scroll', function() {
        const header = document.querySelector('header');
        if (window.scrollY > 50) {
            header.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
        }
    });
</script>