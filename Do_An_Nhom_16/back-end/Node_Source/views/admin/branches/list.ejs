<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Quản Lý Chi Nhánh</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { page: 'branches' }) %>

    <div class="container">
        <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
            <h2>Danh Sách Cửa Hàng</h2>
            <a href="/admin/branches/add" class="btn-sm" style="background: var(--primary); color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;">+ Thêm Chi Nhánh</a>
        </div>

        <table class="table-custom">
            <thead>
                <tr>
                    <th>Tên Chi Nhánh</th>
                    <th>Địa chỉ</th>
                    <th>Thành phố</th>
                    <th>SĐT</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% if (branches && branches.length > 0) { %>
                    <% branches.forEach(b => { %>
                        <tr>
                            <td><%= b.name %></td>
                            <td><%= b.address %></td>
                            <td><%= b.city %></td>
                            <td><%= b.phone %></td>
                            <td>
                                <a href="/admin/branches/delete/<%= b.id %>" class="btn-delete btn-sm" onclick="return confirm('Xóa chi nhánh này?');">Xóa</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="5" class="text-center">Chưa có dữ liệu.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>